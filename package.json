{
  "name": "simple-radio",
  "version": "1.0.0",
  "description": "A simple radio server that streams desktop audio to a web-based music player",
  "main": "production-server.js",
  "scripts": {
    "start": "node production-server.js",
    "rtmp": "node rtmp-server.js",
    "icecast": "node icecast-server.js",
    "direct": "node direct-server.js",
    "production": "node production-server.js",
    "production-cluster": "ENABLE_CLUSTERING=true MAX_CLIENTS=200 node production-server.js",
    "railway": "RAILWAY_MODE=true DISABLE_RTMP=true MAX_CLIENTS=200 node production-server.js",
    "railway-local": "RAILWAY_MODE=true DISABLE_RTMP=true INPUT_RTMP_URL=rtmp://localhost:1935/live/stream node production-server.js",
    "dev": "nodemon production-server.js"
  },
  "keywords": [
    "radio",
    "streaming",
    "audio",
    "nodejs",
    "express",
    "ffmpeg"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "node-media-server": "^2.6.0",
    "socket.io": "^4.8.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
